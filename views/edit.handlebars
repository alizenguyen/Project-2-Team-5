<div class="container">
        <div class="form-group">
            <label for="title">Recipe Name</label>
            <div class="row">
                <div class="col-sm-11">
                    <input value="{{recipe_data.recipe_name}}" type="text" class="form-control" id="editTitle">
                </div>
                <div class="col-sm-1">
                    <button class="btn editBtn  titleBtn editSubmit" data-id="{{recipe_data.id}}">Submit</button>
                </div>
            </div>
            <br />
            <label for="body">Ingredients</label>
            {{#each recipe_data.Ingredients}}
            <div class="row">
                <div class="col-sm-11">
                    <input value="{{this.ingredient_info}}" type="text" class="form-control" id="editIngredient">
                </div>
                <div class="col-sm-1">
                    <button class="btn editBtn ingredientBtn editSubmit" data-ingredientid="{{this.id}}" data-id="{{recipe_data.id}}">Submit</button>
                </div>
            </div>
            {{/each}}
            <br />
            <label for="body">Instructions</label>
            {{#each recipe_data.Instructions}}
            <div class="row">
                <div class="col-sm-11">
                    <textarea type="text" class="form-control" data-ingredientID="{{this.id}}" id="editInstruction" rows="10">{{this.instruction_info}}</textarea>
                </div>
                <div class="col-sm-1">
                    <button class="btn editBtn instructionBtn editSubmit" data-instructionid="{{this.id}}" data-id="{{recipe_data.id}}">Submit</button>
                </div>
            </div>
            {{/each}}
            <br />
        </div>
</div>