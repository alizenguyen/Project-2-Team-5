    <form action="/api/recipe" method="POST">
        <div class="input-group searchaddbar">
            <input type="text" id="recipe_url" name="recipe_url" class="form-control input-md" placeholder="Recipe URL" />
            <span class="input-group-btn">
                <button class="btn btn-info btn-md" id="submit-button" value="Submit" type="submit">
                    <i class="glyphicon glyphicon-plus"></i>
                </button>
            </span>
        </div>
    </form>
    <div class="needtocook">
        <h2 class="table-header">
            <img src="/assets/images/eggbowl.png" class="table-icon">NEED TO COOK</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>TITLE</th>
                    <th class="sourceInfo">SOURCE</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
                {{recipes.recipe_name}} {{#each recipe_data}} {{#unless recipe_checkbox}}
                <tr>
                    <td>
                        <a class="recipeName" href="/recipe/{{this.id}}">{{this.recipe_name}}</a>
                    </td>
                    <td class="sourceInfo">{{this.recipe_url}}</td>
                    <td>
                        <a class="recipeName recipeDelete" data-id="{{this.id}}">delete</a>
                        <a class="recipeName recipeEdit" data-id="{{this.id}}">edit</a>
                    </td>
                </tr>
                {{/unless}} {{/each}}
            </tbody>
        </table>
    </div>
    <div class="recipescomplete">
        <h2 class="table-header">
            <img src="/assets/images/utensils.png" class="table-icon">RECIPES COMPLETE</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>TITLE</th>
                    <th class="sourceInfo">SOURCE</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
                {{#each recipe_data}} {{#if recipe_checkbox}}
                <tr>
                    <td>
                        <a class="recipeName" href="/recipe/{{this.id}}">{{this.recipe_name}}</a>
                    </td>
                    <td class="sourceInfo">{{this.recipe_url}}</td>
                    <td>
                        <a class="recipeName recipeDelete" data-id="{{this.id}}">delete</a>
                        <a class="recipeName recipeEdit" data-id="{{this.id}}">edit</a>
                    </td>
                </tr>
                {{/if}} {{/each}}
            </tbody>
        </table>
    </div>
